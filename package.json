{
  "name": "halolight-svelte",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "基于 SvelteKit 2 + Svelte 5 的现代化中文后台管理系统",
  "author": "h7ml <h7ml@qq.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/halolight/halolight-svelte"
  },
  "homepage": "https://halolight-svelte.h7ml.cn",
  "keywords": [
    "svelte",
    "sveltekit",
    "admin",
    "dashboard",
    "tailwindcss",
    "typescript",
    "cloudflare-pages"
  ],
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint . --ext .js,.ts,.svelte",
    "lint:fix": "eslint . --ext .js,.ts,.svelte --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "ci": "pnpm lint && pnpm format:check && pnpm check && pnpm test:run && pnpm build"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@internationalized/date": "^3.10.0",
    "@lucide/svelte": "^0.544.0",
    "@sveltejs/adapter-auto": "^7.0.0",
    "@sveltejs/adapter-cloudflare": "^7.2.4",
    "@sveltejs/kit": "^2.48.5",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.2.9",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/coverage-v8": "^4.0.14",
    "autoprefixer": "^10.4.22",
    "bits-ui": "^2.14.4",
    "cmdk-sv": "^0.0.19",
    "d3-scale": "^4.0.2",
    "d3-shape": "^3.2.0",
    "d3-time-format": "^4.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-svelte": "^3.13.0",
    "formsnap": "^2.0.1",
    "globals": "^16.5.0",
    "jsdom": "^27.2.0",
    "layerchart": "^1.0.12",
    "mode-watcher": "^1.1.0",
    "msw": "^2.12.3",
    "paneforge": "^1.0.2",
    "postcss": "^8.5.6",
    "prettier": "^3.7.3",
    "prettier-plugin-svelte": "^3.4.0",
    "superforms": "^0.0.1",
    "svelte": "^5.43.8",
    "svelte-check": "^4.3.4",
    "svelte-eslint-parser": "^1.4.0",
    "svelte-sonner": "^1.0.6",
    "sveltekit-superforms": "^2.28.1",
    "tailwind-variants": "^3.2.2",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vaul-svelte": "^0.3.2",
    "vite": "^7.2.2",
    "vitest": "^4.0.14",
    "wrangler": "^4.51.0",
    "zod": "^4.1.13"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "lucide-svelte": "^0.555.0",
    "tailwind-merge": "^3.4.0"
  },
  "msw": {
    "workerDirectory": [
      "static"
    ]
  }
}
